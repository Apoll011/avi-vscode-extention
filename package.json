{
  "name": "avi-language",
  "displayName": "Avi DSL",
  "description": "Language support for the Avi DSL",
  "author": "AVI Team",
  "license": "MIT",
  "version": "0.1.0",
  "publisher": "avi-team",
  "repository": {
    "type": "git",
    "url": "https://github.com/apoll011/avi-vscode-extention"
  },
  "categories": ["Programming Languages"],
  "keywords": [
    "avi",
    "dsl",
    "language-server",
    "lsp"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "avi",
        "aliases": ["Avi DSL", "avi"],
        "extensions": [".avi"],
        "configuration": "./syntaxes/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "avi",
        "scopeName": "source.avi",
        "path": "./syntaxes/avi.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Avi Language Server",
      "properties": {
        "avi.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Avi language server."
        }
      }
    },
    "configurationDefaults": {
      "files.associations": {
        "*.lang": "yaml",
        "*.intent": "yaml",
        "*.entity": "yaml",
        "settings.config": "yaml",
        "const.constdata": "yaml"
      }
    },
    "commands": [
      {
        "command": "avi.showSettingsPreview",
        "title": "Avi: Show Settings Preview",
        "category": "Avi",
        "icon": "$(settings-gear)"
      },
      {
        "command": "avi.testIntent",
        "title": "Avi: Test Intent",
        "category": "Avi",
        "icon": "$(beaker)"
      },
      {
        "command": "avi.createIntent",
        "title": "Avi: Create New Intent",
        "category": "Avi",
        "icon": "$(add)"
      },
      {
        "command": "avi.createEntity",
        "title": "Avi: Create New Entity",
        "category": "Avi",
        "icon": "$(symbol-class)"
      },
      {
        "command": "avi.addLanguage",
        "title": "Avi: Add Language",
        "category": "Avi",
        "icon": "$(globe)"
      },
      {
        "command": "avi.showMissingTranslations",
        "title": "Avi: Show Missing Translations",
        "category": "Avi"
      },
      {
        "command": "avi.addSetting",
        "title": "Avi: Add Setting",
        "category": "Avi",
        "icon": "$(settings)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "avi.showSettingsPreview",
          "when": "resourceLangId == avi || workspaceFolderCount > 0"
        },
        {
          "command": "avi.testIntent",
          "when": "resourceLangId == avi || workspaceFolderCount > 0"
        },
        {
          "command": "avi.createIntent",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "avi.createEntity",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "avi.addLanguage",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "avi.showMissingTranslations",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "avi.addSetting",
          "when": "workspaceFolderCount > 0"
        }
      ],
      "editor/title": [
        {
          "command": "avi.showSettingsPreview",
          "when": "resourceLangId == avi",
          "group": "navigation@1"
        },
        {
          "command": "avi.testIntent",
          "when": "resourceLangId == avi",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "command": "avi.createIntent",
          "when": "explorerResourceIsFolder",
          "group": "avi@1"
        },
        {
          "command": "avi.createEntity",
          "when": "explorerResourceIsFolder",
          "group": "avi@2"
        },
        {
          "command": "avi.addLanguage",
          "when": "explorerResourceIsFolder",
          "group": "avi@3"
        },
        {
          "command": "avi.addSetting",
          "when": "explorerResourceIsFolder",
          "group": "avi@4"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  }
}
