{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Avi",
  "patterns": [
    {
      "include": "#block_doc_comment"
    },
    {
      "include": "#block_comment"
    },
    {
      "include": "#line_doc_comment"
    },
    {
      "include": "#line_comment"
    },
    {
      "include": "#string_literal"
    },
    {
      "comment": "Floating point literal (fraction)",
      "name": "constant.numeric.float.avi",
      "match": "\\b[0-9][0-9_]*\\.[0-9][0-9_]*([eE][+-]?[0-9_]+)?(f32|f64)?\\b"
    },
    {
      "comment": "Floating point literal (exponent)",
      "name": "constant.numeric.float.avi",
      "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?[eE][+-]?[0-9_]+(f32|f64)?\\b"
    },
    {
      "comment": "Floating point literal (decimal)",
      "name": "constant.numeric.integer.decimal.avi",
      "match": "\\b[0-9][0-9_]*\\b"
    },
    {
      "comment": "Static storage modifier",
      "name": "storage.modifier.static.avi",
      "match": "\\bstatic\\b"
    },
    {
      "comment": "Boolean constant",
      "name": "constant.language.boolean.avi",
      "match": "\\b(true|false)\\b"
    },
    {
      "comment": "Control keyword",
      "name": "keyword.control.avi",
      "match": "\\b(break|continue|else|if|for|loop|return|in)\\b"
    },
    {
      "comment": "Keyword",
      "name": "keyword.other.avi",
      "match": "\\b(ns|use|as|link|grab|try|sum|sum_vec4|prod|prod_vec4|min|max|any|all|sift|and|or|go|vec2|vec3|vec4|([xyzw][xyzw]+))\\b"
    },
    {
      "include": "#self"
    },
    {
      "include": "#mut"
    },
    {
      "include": "#lifetime"
    },
    {
      "comment": "Miscellaneous operator",
      "name": "keyword.operator.misc.avi",
      "match": "(\\bx\\s)"
    },
    {
      "comment": "Comparison operator",
      "name": "keyword.operator.comparison.avi",
      "match": "(&&|\\|\\||==|!=)"
    },
    {
      "comment": "Assignment operator",
      "name": "keyword.operator.assignment.avi",
      "match": "(:=|\\+=|-=|/=|\\*=|%=|\\^=|&=|\\|=|<<=|>>=|=)"
    },
    {
      "comment": "Arithmetic operator",
      "name": "keyword.operator.arithmetic.avi",
      "match": "(!|\\+|-|/|\\*|%|\\^|&|\\||<<|>>)"
    },
    {
      "comment": "Comparison operator (second group because of regex precedence)",
      "name": "keyword.operator.comparison.avi",
      "match": "(<=|>=|<|>)"
    },
    {
      "include": "#core_types"
    },
    {
      "include": "#core_vars"
    },
    {
      "comment": "Function call",
      "match": "\\b(\\p{L}[\\p{L}0-9_]*)\\s*\\(",
      "captures": {
        "1": {
          "name": "entity.name.function.avi"
        }
      }
    },
    {
      "comment": "Named argument",
      "match": "\\b(\\p{L}[\\p{L}0-9_]*)\\:",
      "captures": {
        "1": {
          "name": "entity.name.function.avi"
        }
      }
    },
    {
      "comment": "Function definition",
      "begin": "\\b(fn)\\s+(\\p{L}[\\p{L}0-9_]*)",
      "end": "[\\);]",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.fn.avi"
        },
        "2": {
          "name": "entity.name.function.avi"
        }
      },
      "patterns": [
        {
          "include": "#block_comment"
        },
        {
          "include": "#line_comment"
        },
        {
          "include": "#self"
        },
        {
          "include": "#mut"
        },
        {
          "include": "#lifetime"
        },
        {
          "include": "#core_types"
        },
        {
          "include": "#type_params"
        }
      ]
    }
  ],
  "repository": {
    "block_doc_comment": {
      "comment": "Block documentation comment",
      "name": "comment.block.documentation.avi",
      "begin": "/\\*[\\*!](?![\\*/])",
      "end": "\\*/",
      "patterns": [
        {
          "include": "#block_doc_comment"
        },
        {
          "include": "#block_comment"
        }
      ]
    },
    "block_comment": {
      "comment": "Block comment",
      "name": "comment.block.avi",
      "begin": "/\\*",
      "end": "\\*/",
      "patterns": [
        {
          "include": "#block_doc_comment"
        },
        {
          "include": "#block_comment"
        }
      ]
    },
    "line_doc_comment": {
      "comment": "Single-line documentation comment",
      "name": "comment.line.documentation.avi",
      "begin": "//[!/](?=[^/])",
      "end": "$"
    },
    "line_comment": {
      "comment": "Single-line comment",
      "name": "comment.line.double-slash.avi",
      "begin": "//",
      "end": "$"
    },
    "escaped_character": {
      "name": "constant.character.escape.avi",
      "match": "\\\\(x\\h{2}|[0-2][0-7]{,2}|3[0-6][0-7]?|37[0-7]?|[4-7][0-7]?|.)"
    },
    "string_literal": {
      "comment": "Double-quote string literal",
      "name": "string.quoted.double.avi",
      "begin": "b?\"",
      "end": "\"",
      "patterns": [
        {
          "include": "#escaped_character"
        }
      ]
    },
    "self": {
      "comment": "Declaration of variable",
      "match": "\\b(\\p{L}[\\p{L}0-9_]*)\\s(:=)",
      "captures": {
        "1": {
          "name": "variable.language.avi"
        },
        "2": {
          "name": "keyword.operator.assignment.avi"
        }
      }
    },
    "mut": {
      "comment": "Mutable storage modifier",
      "name": "storage.modifier.mut.avi",
      "match": "\\bmut\\b"
    },
    "lifetime": {
      "comment": "Named lifetime",
      "name": "storage.modifier.lifetime.avi",
      "match": "'(\\p{L}[\\p{L}0-9_]*)\\b",
      "captures": {
        "1": {
          "name": "entity.name.lifetime.avi"
        }
      }
    },
    "core_types": {
      "comment": "Built-in/core type",
      "name": "storage.type.core.avi",
      "match": "\\b(any|bool|f64|vec4|str|opt|res|thr|link|sec)\\b"
    },
    "core_vars": {
      "comment": "Core type variant",
      "name": "support.constant.core.avi",
      "match": "\\b(some|none|ok|err)\\b"
    },
    "type_params": {
      "comment": "Type parameters",
      "name": "meta.type_params.avi",
      "begin": "<(?![=<])",
      "end": ">",
      "patterns": [
        {
          "include": "#block_comment"
        },
        {
          "include": "#line_comment"
        },
        {
          "include": "#mut"
        },
        {
          "include": "#lifetime"
        },
        {
          "include": "#core_types"
        },
        {
          "include": "#type_params"
        }
      ]
    }
  },
  "scopeName": "source.avi"
}